<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="minProfile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <dimen name="tollbar_height">50dp</dimen>
    <style name="toolbar">
        <item name="android:layout_height">@dimen/tollbar_height</item>
        <item name="android:background">@color/whiteish</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="toolbar_image">
        <item name="android:layout_width">@dimen/tollbar_height</item>
        <item name="android:layout_height">@dimen/tollbar_height</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="toolbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="edit_profile">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="edit_profile_label" parent="edit_profile">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">23dp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="edit_text" parent="edit_profile">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="edit_text_input" parent="edit_text">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>





















</resources>
